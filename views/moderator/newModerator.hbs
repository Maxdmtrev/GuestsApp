<h1 class="big">Add a Guest</h1>

{{#if error}}
    <section class="errors">
        <p>{{error}}</p>
    </section>
{{/if}}


<form id="new-user-form" class="flex flex-row" method="post" action="/moderator/newModerator">
    <label class="input-group col-1-3">
        <span class="input-group-label">Login:</span>
        <input id="user-first-name" class="input-group-input" type="text" name="login" >
    </label><br>

    <label class="input-group col-1-3">
        <span class="input-group-label">Password:</span>
        <input id="user-last-name" class="input-group-input" type="text" name="password" >
    </label><br>

    <button id="new-user" type="submit" class="button dark">Submit</button>
</form>